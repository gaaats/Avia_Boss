<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gggggggame_bbbb"
    tools:context=".fragm.Start2Fragment">

    <ImageView
        android:id="@+id/img_maaaain_image"
        android:layout_width="200dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@id/img_pass"
        android:src="@drawable/avia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_pass"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pass"
        app:layout_constraintBottom_toTopOf="@id/ed_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_maaaain_image" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ed_txt"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:alpha="0.8"
        android:inputType="text"
        android:background="#B4A9D1"
        android:gravity="center"
        android:hint="Guess airplane name..."
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@id/btn_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_pass" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#29054C"
        android:layout_marginTop="32sp"
        android:fontFamily="@font/montserrat_black"
        android:text="confirm"
        app:layout_constraintBottom_toTopOf="@id/gtgjgtjigt"
        android:textColor="#C5B4F1"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/ed_txt" />

    <TextView
        android:id="@+id/gtgjgtjigt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gtgtgtgtgt"
        android:layout_marginTop="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#C5B4F1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_ok"/>


</androidx.constraintlayout.widget.ConstraintLayout>